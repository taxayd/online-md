{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "$schema": "https://framework-1258016615.tcloudbaseapp.com/schema/latest.json",
  "functionRoot": "cloudfunctions",
  "framework": {
    "name": "online-md",
    "requirement": {
      "environment": {
        "PASSWORD": {
          "description": "请填写访问密码",
          "required": true,
          "default": "",
          "validation": {
            "rule": {
              "type": "RegExp",
              "pattern": ".{6,}",
              "flag": "g"
            },
            "errorMessage": "密码长度需大于6位"
          }
        }
      }
    },
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-website",
        "inputs": {
          "installCommand":"yarn install",
          "buildCommand": "yarn run build",
          "outputPath": "dist",
          "cloudPath": "/",
          "envVariables": {
            "ENV_ID": "{{env.ENV_ID}}"
          }
        }
      },
      "server": {
        "use": "@cloudbase/framework-plugin-function",
        "inputs": {
          "functionRootPath": "cloudfunctions",
          "functions": [
            {
              "name": "backend",
              "timeout": 20,
              "runtime": "Nodejs10.15",
              "memory": 128,
              "aclRule": { "invoke": "auth!=null" },
              "installDependency": false,
              "envVariables": {
                "TZ": "Asia/Shanghai"
              },
              "triggers": [
              ]
            }
          ]
        }
      },
      "db": {
        "use": "@cloudbase/framework-plugin-database",
        "inputs": {
          "collections": [
            {
              "collectionName": "file",
              "aclTag": "READONLY"
            }
          ]
        }
      },
      "auth": {
        "use": "@cloudbase/framework-plugin-auth",
        "inputs": {
          "configs": [
            {
              "platform": "NONLOGIN",
              "status": "ENABLE"
            }
          ]
        }
      }
    }
  }
}
